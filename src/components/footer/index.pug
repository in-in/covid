include ../copy/index.pug
include ../logo/index.pug
include ../menu/index.pug
include ../social/index.pug

mixin footer()
	footer(class=s.footer)&attributes(attributes)
		div(class=s.footer_inner)
			+logo()(class=s.footer_logo)
			+menu(d.menu)(class=s.footer_menu id='js-footer-menu')
			+social()(class=s.footer_social)
			+copy()
