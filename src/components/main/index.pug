include ../contagion/index.pug
include ../hero/index.pug
include ../icon/index.pug
include ../overview/index.pug
include ../section/index.pug

mixin main()
	main(class=s.main)&attributes(attributes)
		+section()(class=s.section__hero)
			div(class=s.section_inner)
				+hero()
			each i, idx in Array(4)
				+icon('assetIconVirus')(
					class=cx(s.section_virus, s[`section_virus${idx}`]))
		+section()(class=s.section__overview)
			div(class=s.section_inner)
				+overview()
			each i, idx in Array(2)
				+icon('assetIconVirus')(
					class=cx(s.section_virus, s[`section_virus${idx}`]))
		+section()(class=s.section__contagion)
			div(class=s.section_inner)
				+contagion()
				+icon('assetIconVirus')(class=cx(s.section_virus, s.section_virus0))
