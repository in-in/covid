include ../button/index.pug
include ../icon/index.pug

mixin form()
	form(
		action='https://formspree.io/mvowebpg'
		accept-charset='UTF-8'
		method='POST'
		class=s.form)&attributes(attributes)
		input(
			class=s.form_input
			type='email'
			id='email'
			aria-label='Email'
			name='Covid'
			placeholder=' '
			required)
		label(for='email' class=s.form_label) Email Address
		+button({text: 'Send', type: 'submit'}, 'primary')(class=s.form_button)
			+icon('assetIconSend')(class=s.form_buttonIcon)
