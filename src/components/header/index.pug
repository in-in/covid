include ../logo/index.pug
include ../menu/index.pug
include ../button/index.pug

mixin header()
	header(class=s.header x-data='covid()')&attributes(attributes)
		+logo()(class=s.header_logo)
		+menu(d.menu)(class=s.header_menu id='js-header-menu')
		+button({text: 'Contact'}, 'plain')(
			@click.prevent='smoothScroll("#help_form")'
			class=s.header_button)
